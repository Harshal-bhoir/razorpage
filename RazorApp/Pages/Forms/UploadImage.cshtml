@page
@model RazorApp.Pages.Forms.UploadImageModel

<h1>UploadImage</h1>

<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="file.imageFile" type="file" class="form-control" multiple/>
            <p style="text-align: center; margin-top: 20px">
                <button type="submit" class="btn btn-lg btn-primary" >
                    Upload Image
                </button>
            </p>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>